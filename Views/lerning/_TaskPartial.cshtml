                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Материалы</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Практические работы
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.Action("JobsPartial", "lerning")
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Mark">Оценки</a>
                        </li>
                    </ul>
                    <div class="col-md-3 text-end">
                        <a href="/Account/Profile" class="btn btn-outline-primary me-2">Профиль</a>
                    </div>
                </div>
            </div>
        </nav>}
    @if (User.IsInRole("Admin"))
    {

        <div class="col-md-3 text-end">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none"></a>
            <a href="/Admin/Task" class="btn btn-outline-primary me-2">Админ панель</a>
        </div>
    }




