<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")





</head>

<body>

    @if (User.IsInRole("User"))
    {
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-xxl">
                <a class="navbar-brand" href="/lerning">Практикум</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Materials">Материалы</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Практические работы
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                @Html.Action("JobsPartial", "lerning")
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Mark">Оценки</a>
                        </li>
                    </ul>
                    <div class="col-md-3 text-end">
                        <a href="/Account/Profile" class="btn btn-outline-primary me-2">Профиль</a>
                    </div>
                </div>
            </div>
        </nav>}
    @if (User.IsInRole("Admin"))
    {

        <div class="col-md-3 text-end">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none"></a>
            <a href="/Admin/Task" class="btn btn-outline-primary me-2">Админ панель</a>
        </div>
    }




<style>
    * {
        margin: 0;
        padding: 0;
    }

    html,
    body {
        height: 100%;
    }

    .wrapper {
        position: relative;
        min-height: 100%;
    }

    .content {
        padding-bottom: 90px;
    }

    .footer {
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 80px;
    }
 </style>


   
        <div class="container body-content">
            @RenderBody()
            <footer">
                <hr />
                <p id="footer">&copy; @DateTime.Now.Year - ВКР Электронный практикум "Операционные системы"</p>
        </div>
    </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
